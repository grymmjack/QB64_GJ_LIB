''
' Reset modes
'
' @return string with ANSI escape codes for resetting 1modes
FUNCTION ansi_mode_reset_all$ ()
    out$ = chr$(ANSI_ESC) + "[0m"
    IF GJ_LIB_ANSI_EMU THEN
        fg_color& = 7
        bg_color& = 0
        COLOR fg_color&, bg_color&
        _BLINK ON
    END IF    
    ansi_mode_reset_all$ = out$
END FUNCTION


''
' Set bold mode
'
' @return string with ANSI escape codes for setting mode
FUNCTION ansi_mode_bold$ ()
    out$ = chr$(ANSI_ESC) + "[1m"
    IF GJ_LIB_ANSI_EMU THEN
        IF fg_color& <= 7 THEN
            fg_color& = fg_color& + 8
            COLOR fg_color&
        END IF
    END IF    
    ansi_mode_bold$ = out$
END FUNCTION


''
' Reset bold mode
'
' @return string with ANSI escape codes for resetting mode
FUNCTION ansi_mode_bold_reset$ ()
    out$ = chr$(ANSI_ESC) + "[22m"
    IF GJ_LIB_ANSI_EMU THEN
        IF fg_color& >= 8 THEN
            fg_color& = fg_color& - 8
            COLOR fg_color&
        END IF        
    END IF    
    ansi_mode_bold_reset$ = out$
END FUNCTION


''
' Set dim mode
'
' @return string with ANSI escape codes for setting mode
FUNCTION ansi_mode_dim$ ()
    out$ = chr$(ANSI_ESC) + "[2m"
    IF GJ_LIB_ANSI_EMU THEN 
        nil$ = ansi_mode_bold_reset
    END IF
    ansi_mode_dim$ = out$
END FUNCTION


