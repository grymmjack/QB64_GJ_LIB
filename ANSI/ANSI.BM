''
' Save cursor position
'
' @return void
FUNCTION ansi_save_pos$ ()
    out$ = chr$(ANSI_ESC) + "["
    out$ = out$ + "s"
    IF GJ_LIB_ANSI_EMU THEN
        ansi_x% = POS(0)
        ansi_y% = CSRLIN
    END IF
    ansi_save_pos$ = out$
END FUNCTION


''
' Restore cursor position
'
' @return void
FUNCTION ansi_restore_pos$ ()
    out$ = chr$(ANSI_ESC) + "["
    out$ = out$ + "u"
    IF GJ_LIB_ANSI_EMU THEN
        LOCATE ansi_y%, ansi_x%
    END IF
    ansi_restore_pos$ = out$
END FUNCTION


''
' Erase from cursor to end of screen
'
' @return void
FUNCTION ansi_erase_to_eos$ ()
    out$ = chr$(ANSI_ESC) + "["
    out$ = out$ + "0"
    out$ = out$ + "J"
    IF GJ_LIB_ANSI_EMU THEN
        w = _WIDTH(0)
        h = _HEIGHT(0)
        x = POS(0)
        y = CSRLIN
        PRINT SPC(w-x)
        FOR row = y TO h
            LOCATE row, 1
            PRINT SPC(w)
        NEXT row
        LOCATE y, x
    END IF
    ansi_erase_to_eos$ = out$
END FUNCTION


''
' Erase from cursor to beginning of screen
'
' @return void
FUNCTION ansi_erase_to_bos$ ()
    out$ = chr$(ANSI_ESC) + "["
    out$ = out$ + "1"
    out$ = out$ + "J"
    IF GJ_LIB_ANSI_EMU THEN
        w = _WIDTH(0)
        h = _HEIGHT(0)
        x = POS(0)
        y = CSRLIN
        LOCATE ,1
        PRINT SPC(x-1)
        FOR row = h TO 1 STEP - 1
            LOCATE row, 1
            PRINT SPC(w)
        NEXT row
        LOCATE y, x
    END IF
    ansi_erase_to_bos$ = out$
END FUNCTION


''
' Erase entire screen
'
' @return void
FUNCTION ansi_erase_screen$ ()
    out$ = chr$(ANSI_ESC) + "["
    out$ = out$ + "2"
    out$ = out$ + "J"
    IF GJ_LIB_ANSI_EMU THEN
        CLS
    END IF
    ansi_erase_screen$ = out$
END FUNCTION


''
' Erase from cursor to end of line
'
' @return void
FUNCTION ansi_erase_to_eol$ ()
