FUNCTION ansi_fg_rgb$ (r%, g%, b%)
    out$ = chr$(ANSI_ESC) + "[38;2"
    out$ = out$ + ";" + _TRIM$(STR$(r%))
    out$ = out$ + ";" + _TRIM$(STR$(g%))
